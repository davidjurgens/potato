{
  "id": "ipums-demographics",
  "name": "IPUMS Harmonized Demographics",
  "short_name": "IPUMS-Demo",
  "description": "Harmonized demographic questions based on IPUMS (Integrated Public Use Microdata Series) standards, designed for cross-survey and cross-national comparability.",
  "url": "https://ipums.org",
  "reference": "Ruggles, S., Flood, S., Sobek, M., et al. (2023). IPUMS USA: Version 14.0 [dataset]. Minneapolis, MN: IPUMS.",
  "reference_url": "https://doi.org/10.18128/D010.V14.0",
  "items_count": 12,
  "domains": ["demographics"],
  "instructions": "Please answer the following questions about yourself.",
  "questions": [
    {
      "name": "ipums_age",
      "description": "What is your age in completed years?",
      "annotation_type": "textbox",
      "label_requirement": {"required": true}
    },
    {
      "name": "ipums_sex",
      "description": "What is your sex?",
      "annotation_type": "radio",
      "labels": [
        {"name": "male", "label": "Male"},
        {"name": "female", "label": "Female"}
      ],
      "label_requirement": {"required": true}
    },
    {
      "name": "ipums_marst",
      "description": "What is your current marital status?",
      "annotation_type": "radio",
      "labels": [
        {"name": "married_spouse_present", "label": "Married, spouse present"},
        {"name": "married_spouse_absent", "label": "Married, spouse absent"},
        {"name": "separated", "label": "Separated"},
        {"name": "divorced", "label": "Divorced"},
        {"name": "widowed", "label": "Widowed"},
        {"name": "never_married", "label": "Never married/single"}
      ],
      "label_requirement": {"required": true}
    },
    {
      "name": "ipums_race",
      "description": "What is your race? (Select the one that best describes you)",
      "annotation_type": "radio",
      "labels": [
        {"name": "white", "label": "White"},
        {"name": "black", "label": "Black/African American"},
        {"name": "american_indian", "label": "American Indian or Alaska Native"},
        {"name": "chinese", "label": "Chinese"},
        {"name": "japanese", "label": "Japanese"},
        {"name": "other_asian", "label": "Other Asian or Pacific Islander"},
        {"name": "other", "label": "Other race"},
        {"name": "two_more", "label": "Two or more races"}
      ],
      "label_requirement": {"required": true}
    },
    {
      "name": "ipums_hispan",
      "description": "Are you of Hispanic, Latino, or Spanish origin?",
      "annotation_type": "radio",
      "labels": [
        {"name": "not_hispanic", "label": "No, not of Hispanic origin"},
        {"name": "mexican", "label": "Yes, Mexican"},
        {"name": "puerto_rican", "label": "Yes, Puerto Rican"},
        {"name": "cuban", "label": "Yes, Cuban"},
        {"name": "other_hispanic", "label": "Yes, other Hispanic"}
      ],
      "label_requirement": {"required": true}
    },
    {
      "name": "ipums_educ",
      "description": "What is the highest level of education you have completed?",
      "annotation_type": "radio",
      "labels": [
        {"name": "none_preschool", "label": "No schooling or preschool only"},
        {"name": "grade_1_4", "label": "Grades 1-4"},
        {"name": "grade_5_8", "label": "Grades 5-8"},
        {"name": "grade_9", "label": "Grade 9"},
        {"name": "grade_10", "label": "Grade 10"},
        {"name": "grade_11", "label": "Grade 11"},
        {"name": "grade_12", "label": "Grade 12 (high school diploma or GED)"},
        {"name": "1_year_college", "label": "1 year of college"},
        {"name": "2_years_college", "label": "2 years of college"},
        {"name": "3_years_college", "label": "3 years of college"},
        {"name": "4_years_college", "label": "4 years of college (Bachelor's degree)"},
        {"name": "5_plus_college", "label": "5+ years of college (graduate degree)"}
      ],
      "label_requirement": {"required": true}
    },
    {
      "name": "ipums_empstat",
      "description": "What is your current employment status?",
      "annotation_type": "radio",
      "labels": [
        {"name": "employed", "label": "Employed"},
        {"name": "unemployed", "label": "Unemployed"},
        {"name": "not_in_labor_force", "label": "Not in labor force"}
      ],
      "label_requirement": {"required": true}
    },
    {
      "name": "ipums_classwkr",
      "description": "What is your class of worker?",
      "annotation_type": "radio",
      "labels": [
        {"name": "self_employed", "label": "Self-employed"},
        {"name": "works_for_wages", "label": "Works for wages or salary"},
        {"name": "unpaid_family", "label": "Unpaid family worker"},
        {"name": "not_applicable", "label": "Not applicable / Not in labor force"}
      ],
      "label_requirement": {"required": true}
    },
    {
      "name": "ipums_incwage_category",
      "description": "What was your total wage and salary income in the past year?",
      "annotation_type": "radio",
      "labels": [
        {"name": "none", "label": "None"},
        {"name": "under_10k", "label": "Under $10,000"},
        {"name": "10k_25k", "label": "$10,000 - $24,999"},
        {"name": "25k_50k", "label": "$25,000 - $49,999"},
        {"name": "50k_75k", "label": "$50,000 - $74,999"},
        {"name": "75k_100k", "label": "$75,000 - $99,999"},
        {"name": "100k_plus", "label": "$100,000 or more"}
      ],
      "label_requirement": {"required": true}
    },
    {
      "name": "ipums_bpl",
      "description": "Where were you born?",
      "annotation_type": "radio",
      "labels": [
        {"name": "us_state", "label": "In a U.S. state"},
        {"name": "us_territory", "label": "In a U.S. territory (Puerto Rico, Guam, etc.)"},
        {"name": "abroad_us_parents", "label": "Abroad, of American parent(s)"},
        {"name": "foreign", "label": "In a foreign country"}
      ],
      "label_requirement": {"required": true}
    },
    {
      "name": "ipums_citizen",
      "description": "What is your citizenship status?",
      "annotation_type": "radio",
      "labels": [
        {"name": "born_us", "label": "Born in the U.S."},
        {"name": "born_abroad_parents", "label": "Born abroad of American parents"},
        {"name": "naturalized", "label": "Naturalized citizen"},
        {"name": "not_citizen", "label": "Not a citizen"}
      ],
      "label_requirement": {"required": true}
    },
    {
      "name": "ipums_nchild",
      "description": "How many of your own children live in your household?",
      "annotation_type": "radio",
      "labels": [
        {"name": "0", "label": "None"},
        {"name": "1", "label": "1"},
        {"name": "2", "label": "2"},
        {"name": "3", "label": "3"},
        {"name": "4", "label": "4"},
        {"name": "5plus", "label": "5 or more"}
      ],
      "label_requirement": {"required": true}
    }
  ]
}
