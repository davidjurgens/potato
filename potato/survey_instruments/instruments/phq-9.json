      "name": "phq9_1",
      "description": "Little interest or pleasure in doing things",
      "annotation_type": "radio",
      "labels": [
        {"name": "not_at_all", "label": "Not at all", "tooltip": "0 points"},
        {"name": "several_days", "label": "Several days", "tooltip": "1 point"},
